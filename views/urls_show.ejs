<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("partials/_head") %>
    <title>Tiny App, URL Details</title>
</head>

<body>
  <%- include("partials/_header", { username }) %>

    <div class="card text-center">
      <div class="card-header"></div>
      <div class="card-body">
        <h5 class="card-title">TinyURL for: <%= longURL %>
        </h5>
        <p class="card-text">Short URL: <a href="/u/<%= shortURL %>">
            <%= shortURL %>
          </a></p>
      </div>
      <div class="d-flex justify-content-center">
        <form class="form-inline" action="/urls/<%= shortURL %> " method="POST">
          <div class="form-group mb-2">
            <label for="longURL">Edit Long URL:</label>
            <input class="form-control" type="text" name="longURL" placeholder="http://"
              style="width: 300px; margin: 1em">
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
        </form>
      </div>
      <div class="card-footer text-muted"></div>
    </div>

    <%- include("partials/_bootstrap_js") %>
</body>

</html>